# Run `load_env` when you want to export specific secrets.
load_env() {
{{- if eq .profile "Work" }}
  ## Work
  export OPENAI_BASE_URL={{ onepasswordRead "op://Work/OPENAI_BASE_URL/credential" }}
  export OPENAI_API_KEY={{ onepasswordRead "op://Work/OPENAI_API_KEY/credential" }}
  export ANTHROPIC_BASE_URL={{ onepasswordRead "op://Work/ANTHROPIC_BASE_URL/credential" }}
  export ANTHROPIC_AUTH_TOKEN={{ onepasswordRead "op://Work/ANTHROPIC_AUTH_TOKEN/credential" }}
{{ end -}}
{{- if eq .profile "Personal" }}
  ## Personal
  export OPENAI_API_KEY={{ onepasswordRead "op://Personal/OPENAI_API_KEY/credential" }}
{{ end -}}
}
